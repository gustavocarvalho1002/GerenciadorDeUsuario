@model PreRegistro_CadastroUsuario.Models.Usuario


@using (Html.BeginForm())
{
    <br>
    <div class="text-center">
        @*<img src="~/Content/unb_logo.jpg">*@
        <hr>
        <h3><strong>EDITAR COLABORADOR</strong></h3>
    </div>
    <br>
    <div class="form-horizontal">
        <div class="col-md-offset-3">
            <div class="form-group" hidden>
                @Html.LabelFor(model => model.idUsuario, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.idUsuario, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.nome, "Nome:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CPF, "CPF:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CPF, new { htmlAttributes = new { @class = "form-control", @maxlength = "11" } })
                    @Html.ValidationMessageFor(model => model.CPF, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.email, "E-mail:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ativo, "Ativo:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.ativo, new { htmlAttributes = new { @class = "col-md-1" } })
                    </div>
                </div>
            </div>

            <br>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-1 col-md-offset-1">
                        <strong>Senha:</strong>
                    </div>
                    <div class="btn-group" role="group">
                        @Html.ActionLink("Gerar senha nova", "GerarSenhaNova", new { idUsuario = Model.idUsuario,nomeUsuario = Model.nome, email = Model.email, cpf = Model.CPF }, new { @class = "btn btn-default" })
                    </div>
                </div>
                <br>
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-info" role="alert" id="alertaGerarSenha">@ViewBag.Message</div>
                }
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-info" role="alert" id="alertaGerarSenha">@ViewBag.ErrorMessage</div>
                }

            </div>


            <br>
            <br>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-1 col-md-offset-2">
                        <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Index", "Usuario")';return false;">Voltar</button>
                    </div>
                    <div class="col-md-1 col-md-offset-1">
                        <input type="submit" value="Salvar" class="btn btn-success" />
                    </div>
                </div>
                @*<button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Index", "Usuario")';return false;"><span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span></button>*@
            </div>
        </div>
    </div>
}
<hr />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
